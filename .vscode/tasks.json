{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "SDL2",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-g",
                "src\\*.c",
                "src\\cpu\\*.c",
                "-o",
                "build\\game.exe",
                "-IC:/SDL2/x86_64-w64-mingw32/include",
                "-LC:/SDL2/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}